<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/fragment_shop_detail_image"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_shop_detail_description"
        android:layout_marginTop="@dimen/activity_space_detail"
        android:layout_marginLeft="@dimen/activity_space_detail"
        android:layout_marginRight="@dimen/activity_space_detail"
    />
   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_to_arrive"
        android:layout_marginTop="@dimen/activity_space_detail"
        android:gravity="center"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/fragment_shop_detail_address"
              android:gravity="center"


    />



</LinearLayout>
